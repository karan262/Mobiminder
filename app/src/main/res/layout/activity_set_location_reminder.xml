<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom__8"

    tools:context=".SetLocationReminder">

    <EditText
        android:id="@+id/Place"
        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/rectangle_10"
        android:hint="Enter Place To Search"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ReminderDesc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/ReminderDesc"
        android:layout_width="match_parent"

        android:layout_height="120dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rectangle_11"
        android:hint="Enter Description Of Reminder"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toTopOf="@+id/SearchLocation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/SearchLocation"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="64dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/rectangle_12"
        android:text="Search"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/InsertReminder"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="63dp"
        android:layout_marginBottom="96dp"
        android:background="@drawable/rectangle_12"
        android:text="Insert"
        android:textAllCaps="false"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/SearchLocation" />


</androidx.constraintlayout.widget.ConstraintLayout>